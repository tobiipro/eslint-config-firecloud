root = true

[*]
indent_style = space
indent_size = 2
# end_of_line = lf # let .gitattributes manage the conversion
insert_final_newline = true
charset = utf-8
trim_trailing_whitespace = true
max_line_length = 120

[npm-install-peer-dependencies]
max_line_length = 1024

[.npmignore]
insert_final_newline = false # remove if .npmignore isn't empty
